# Arquivo de exemplo de variáveis de ambiente
# Copie para .env e ajuste os valores

# Banco de Dados
POSTGRES_DB=petshop
POSTGRES_USER=petshop
POSTGRES_PASSWORD=change_me_in_production

# Spring Boot
SPRING_PROFILES_ACTIVE=prod
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/petshop
JAVA_OPTS=-Xms256m -Xmx512m

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Production
CONNECTION_STRING=Host=postgres;Port=5432;Database=petshop;Username=petshop;Password=change_me_in_production

# CORS (separados por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost,https://seu-dominio.com

# Portas (se quiser mudar)
SPRINGBOOT_PORT=8080
ASPNET_PORT=5000
NGINX_PORT=80
POSTGRES_PORT=5432
